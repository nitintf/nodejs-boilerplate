{
	"name": "nodejs-boilerplate",
	"version": "1.0.0",
	"description": "Proffesional NodeJs Boilerplate",
	"main": "dist/index.js",
	"scripts": {
		"build": "tsc",
		"build:dev": "rm -rf node_modules && npm ci && npm run dbmate:wait && npm run dbmate:up",
		"clean": "del './dist/*' '!./dist/node_modules' ./tsconfig.tsbuildinfo './coverage'",
		"dbmate": "dbmate -e DATABASE_URL",
		"dbmate:wait": "npm run dbmate -- wait",
		"dbmate:up": "npm run dbmate -- --no-dump-schema up",
		"dbmate:down": "npm run dbmate -- --no-dump-schema down",
		"dbmate:drop": "npm run dbmate -- drop",
		"start:main": "npm run build:dev && nodemon -e ts,js --ignore dist --exec \"npm run build && node . || exit 1\"",
		"start:debug": "npm run build:dev && nodemon -e ts,js --ignore dist --exec \"npm run build && node --inspect-brk=0.0.0.0:9229 . || exit 1\"",
		"lint": "tslint -p .",
		"unit": "npm run clean && npm run build && jest --config=jest.config.js --env=node --forceExit --detectOpenHandles --coverage",
		"integration:base": "export DATABASE_URL=postgresql://postgres:postgres@db:65342/test?sslmode=disable && npm run clean && npm run build && npm run dbmate:wait && npm run dbmate:drop && npm run dbmate:up && ts-mocha --config ./.mocharc.yml --exit",
		"integration": "nyc npm run integration:base -- ./src/**/*.mocha.*",
		"integration:buildkite": "nyc npm run integration:base",
		"integration:watch": "npm run integration:base -- -w --watch-extensions ./src/**/*.mocha.*"
	},
	"keywords": [],
	"author": "Nitin",
	"license": "ISC",
	"dependencies": {
		"@godaddy/terminus": "^4.10.2",
		"@istanbuljs/nyc-config-typescript": "^1.0.2",
		"@types/assert": "^1.5.6",
		"ajv": "^8.11.0",
		"change-case": "^4.1.2",
		"compression": "^1.7.4",
		"cors": "^2.8.5",
		"dd-trace": "^2.8.0",
		"express": "^4.18.1",
		"http-status-codes": "^2.2.0",
		"json-decycle": "^2.0.1",
		"mime": "^3.0.0",
		"moment": "^2.29.3",
		"moment-timezone": "^0.5.34",
		"node-pagerduty": "^1.3.6",
		"pg": "^8.7.3",
		"pg-copy-streams": "^6.0.2",
		"pg-format": "^1.0.4",
		"promise-timeout": "^1.3.0",
		"ramda": "^0.28.0",
		"sequelize": "^6.20.1",
		"sequelize-transforms": "^2.0.0",
		"sharp": "^0.30.6",
		"ts-enum-util": "^4.0.2",
		"ts-mocha": "^10.0.0",
		"uuid": "^8.3.2",
		"winston": "^3.7.2"
	},
	"devDependencies": {
		"@types/compression": "^1.7.2",
		"@types/cors": "^2.8.12",
		"@types/express": "^4.17.13",
		"@types/jest": "^28.1.0",
		"@types/mocha": "^9.1.1",
		"@types/pg": "^8.6.5",
		"@types/pg-copy-streams": "^1.2.1",
		"@types/pg-format": "^1.0.2",
		"@types/promise-timeout": "^1.3.0",
		"@types/ramda": "^0.28.13",
		"@types/sequelize": "^4.28.13",
		"@types/sequelize-fixtures": "^0.6.3",
		"@types/sharp": "^0.30.2",
		"@types/sinon": "^10.0.11",
		"@types/uuid": "^8.3.4",
		"@types/winston": "^2.4.4",
		"codecov": "^3.8.3",
		"del-cli": "^4.0.1",
		"dotenv": "^16.0.1",
		"jest": "^28.1.0",
		"jest-junit": "^13.2.0",
		"lint-staged": "^13.0.0",
		"mocha": "^10.0.0",
		"mocha-junit-reporter": "^2.0.2",
		"mocha-multi-reporters": "^1.5.1",
		"nodemon": "^2.0.16",
		"nyc": "^15.1.0",
		"prettier": "^2.6.2",
		"sequelize-fixtures": "^1.2.0",
		"sinon": "^14.0.0",
		"ts-jest": "^28.0.4",
		"ts-node": "^10.8.1",
		"tsconfig-paths": "^4.0.0",
		"tslint": "^6.1.3",
		"tslint-config-prettier": "^1.18.0",
		"typescript": "^4.7.3"
	},
	"lint-staged": {
		"src/**/*.ts": [
			"npm run lint -- --fix",
			"npx prettier --write"
		],
		"src/**/*.js": [
			"npm run lint -- --fix",
			"npx prettier --write"
		]
	},
	"nyc": {
		"extends": "@istanbuljs/nyc-config-typescript",
		"check-coverage": false,
		"extension": [
			".ts"
		],
		"all": false,
		"include": [
			"src/**"
		],
		"exclude": [
			"src/**/__tests__/**",
			"src/**/__mocha__/**",
			"src/**/*.mocha.*",
			"src/_tests_/**/*.*",
			"src/__artillery__/**/*.*"
		],
		"reporter": [
			"html",
			"lcov",
			"text-summary"
		],
		"report-dir": "coverage"
	}
}
